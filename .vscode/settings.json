{
  // File exclusions for better performance
  "files.exclude": {
    "**/__pycache__": true,
    "**/.venv": true,
    "**/.pytest_cache": true,
    "**/.cache": true,
    "**/.docker": true,
    "node_modules": true,
    "**/.env": true,
    "**/env/": true,
    "**/.ipynb_checkpoints": true,
    "**/.mypy_cache": true
  },
  "search.exclude": {
    "node_modules": true,
    "**/.venv": true,
    "**/env/": true,
    "**/.env": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true
  },
  
  // Editor settings
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },
  "editor.rulers": [88],
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.eol": "\n",
  "workbench.editor.enablePreview": false,
  
  // Python configuration
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--line-length", "88"],
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": ["--max-line-length=88"],
  "python.linting.mypyEnabled": true,
  "python.linting.pylintEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.autoTestDiscoverOnSaveEnabled": true,
  "python.testing.pytestArgs": ["--maxfail=1", "-q"],
  "python.analysis.typeCheckingMode": "basic",
  "python.defaultInterpreterPath": "/app/venv/bin/python",
  
  // Node.js/JavaScript configuration
  "javascript.format.enable": true,
  "typescript.format.enable": true,
  "eslint.enable": true,
  "prettier.enable": true,
  
  // Docker support
  "docker.showStartContainerOnAttach": false,
  "docker.defaultRegistryPath": "",
  
  // Terminal configuration
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.env.windows": {
    "PYTHONIOENCODING": "utf-8"
  },
  
  // Git configuration
  "git.autofetch": true,
  "git.confirmSync": false,
  
  // GitHub Copilot configuration (adjust per privacy needs)
  "github.copilot.enable": true,
  "github.copilot.inlineSuggest.enable": true,
  "github.copilot.chat.experimental.enable": true,
  
  // Remote/Devcontainer support
  "remote.containers.showExplorer": true,
  
  // Workspace-specific settings
  "jupyter.notebookFileRoot": "${workspaceFolder}",
  "jupyter.interactiveWindow.creationMode": "perFile",
  "jupyter.interactiveWindow.textEditor.executeSelection": true,
  
  // Settings sync (exclude sensitive extensions)
  "settingsSync.ignoredExtensions": [
    "some-sensitive-extension"
  ]
}
